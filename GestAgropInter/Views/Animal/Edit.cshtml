@model GestAgropInter.Models.Animal
@{
    ViewData["Title"] = "Edit";
}

<div class="content-wrapper" style="min-height: 1302.4px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Animal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Animal</a></li>
              <li class="breadcrumb-item active">Editar</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <div class="card-header">
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <a asp-action="Index" class="btn btn-block btn-success btn-xs" >Retornar para Listagem</a>                                
                  </div>
                </div>
              </div>
            ​<div class="col-md-12">

            <form asp-controller="Animal" asp-action="Create">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Editar</h3>
                        </div>
                        <div class="card-body form-group">
                            <input asp-for="Tag" id="Tag" class="form-control form-control-lg" onkeyup="somenteNumeros(this);" type="text" placeholder="Identificação">
                            <span asp-validation-for="Tag" class="text-danger"></span>
                        <br>
                        <div class="form-group">
                            <select asp-for="Sexo" class="form-control form-control-lg">   
                               <option value="Fêmea">Fêmea</option>   
                               <option value="Macho">Macho</option>  
                            </select>
                        </div>
                        <br/>
                        <div class="form-group">
                            <select asp-for="FazendaID" class="form-control form-control-lg">

                            @foreach (var item in Model.FazendaList)
                            {
                                    <option value="@item.NomeFazenda">@item.NomeFazenda</option>
                            }
                             </select>
                        </div>
                                              
                        <div class="form-group">
                           <input  asp-for="Id" id="Id" class="form-control form-control-lg" type="text" hidden>                                      
                            
                        </div>
                        <div class="input-group input-group-sm" style="width: 300px;">

                        <button type="submit" class="btn btn-block btn-success btn-xs" >Salvar</button>                        
                        </div>
                    </div>                
                </div>
            </form>

          </div>
            <!-- /.card -->
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
          <h5>Title</h5>
          <p>Sidebar content</p>
        </div>
      </aside>
